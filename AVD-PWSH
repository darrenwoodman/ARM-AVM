# Set subscription context
$context = Get-AzSubscription -SubscriptionId {}
Set-AzContext $context
# Create resource group in context
$resourcegroupName = "AVD-RG"
$resourcegroupLocation = "ukwest"
New-AzResourceGroup $resourcegroupName $resourcegroupLocation
# Set default resource group
Set-AzDefault -ResourceGroupName
# Create Storage group for AVD
# Allowed option for storageaccountType are 
#        "Standard_LRS",
#        "Standard_GRS",
#        "Standard_ZRS",
#        "Premium_LRS"
$templateFile = "./ARM-AVD-StorageGroup-Template.json"
$today=Get-Date -Format "MM-dd-yyyy"
$deploymentName="Storageonlytemplate-"+"$today"
New-AzResourceGroupDeployment -Name $deploymentName -TemplateFile $templateFile -storageName tspprotesty456 -storageAccountType Standard_LRS 
    -ResourceGroupName AVD-RG